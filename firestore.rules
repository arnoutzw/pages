rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // GitHub API cache — public read, authenticated write
    match /github_cache/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // PDF cache — public read, authenticated write
    match /pdf_cache/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Feedback — anyone can create (with schema validation), authenticated can read
    match /feedback/{document} {
      allow create: if request.resource.data.keys().hasOnly(['message', 'email', 'timestamp', 'userAgent'])
        && request.resource.data.message is string
        && request.resource.data.message.size() < 5000;
      allow read: if request.auth != null;
    }

    // Per-user settings — only the owning user can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Per-user app data — scoped by user ID
    match /users/{userId}/app_data/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
