rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Temporary open rule — expires 2026-03-10
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 3, 10);
    }

    // PDF cache collection - public read/write (anonymous + authenticated)
    match /pdf_cache/{document} {
      allow read, write: if true;
    }

    // GitHub API cache collection - public read/write (anonymous + authenticated)
    match /github_cache/{document} {
      allow read, write: if true;
    }

    // Feedback collection - public can create, authenticated users can read
    match /feedback/{document} {
      allow create: if true;
      allow read: if request.auth != null;
    }

    // Per-user settings collection — only the owning user can read/write
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Per-user app data — scoped by user ID
    match /users/{userId}/app_data/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
